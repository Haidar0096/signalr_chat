@page
<div class="container">
    <div class="row p-1">
        <div class="col-1">Connection Id:</div>
        <div class="col-5" id="connectionId"></div>
    </div>
    <div class="row p-1">
        <div class="col-1">Username</div>
        <div class="col-5"><input type="text" id="username" /></div>
    </div>
    <div class="row p-1">
        <div class="col-1">Message</div>
        <div class="col-5"><input type="text" class="w-100" id="message" /></div>
    </div>
    <div class="row p-1">
        <div class="col-1">Recepient Connection Id</div>
        <div class="col-5"><input type="text" id="recepientConnectionId" /></div>
    </div>
    <div class="row p-1">
        <div class="col-6 text-end">
            <input type="button" id="sendButton" value="Send Message" />
            <input type="button" id="clearButton" value="Clear Chat" />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <hr />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>